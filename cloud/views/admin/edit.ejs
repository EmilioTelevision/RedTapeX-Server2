<% include header %>


<div class="col-sm-4 col-md-3 sidebar2">
              
              <h3>Your Website Content</h3>
                      
                  <h6>Modify the settings and update the content of your website. Add page content, blog posts to your website</h6>
              
                  <a class='newstuff' href='/admin'><img class='navimg' src='../img/backarrow.png'>All Content</a>
                  
                

                  <h5>Content Areas</h5>

                 

                <ul class='smlst'>
                  <% if (!_.isEmpty(areas)) { %>
                            <% areas.forEach(function(area) { %>
                                 <li class='<%= ((area.get('locked') == true) ? 'lockit' : '') %>'><a href="/admin#<%= area.id %>"><%= area.get('name') %></a></li>
                            <% }) %>

                    <% } %>
                         <li class='newarea'><a href='/newarea'>Create New Content Area</a></li>   
                    </ul>  
                  
          </div>   


<div id='mainarea' class="col-sm-5 col-sm-offset-7 col-md-4 col-md-offset-4 main">
          <h1 class="page-header">Edit</h1>


<div class='row'>
<div class='col-md-9'>




<form class='edit_post' method='post' action="<%= '/posts/' + post.id %>">
  <div class='form_section'>
    <label>Title</label>
    <input class='post_title' name='title' value="<%= post.get('title') %>" />
  </div>
  <div class='form_section'>
    <label>Body</label>
    <textarea class='post_body' name='body' ><%= post.get('body') %></textarea>
  </div>
  <div class='form_section'>
    <!-- This hidden element causes express.methodOverride middleware to override
    the HTTP method from post to put for a truly RESTful interface. -->
    <input type='hidden' name='_method' value='put' />
    <input class='button' type='submit' value='Update' />
  </div>
</form>





</div>

</div>









<% include footer %>