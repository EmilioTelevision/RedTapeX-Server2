<% var stylesheet = "admin" %>
<% include header %>


<div class="col-sm-4 col-md-3 sidebar2">
              
              <h3>Your Website Content</h3>
                      
                  <h6>Modify the settings and update the content of your website. Add page content, blog posts to your website</h6>
              
                  <a class='newstuff' href='/new'><img class='navimg' src='img/add.png'>Add Content</a>
                  
                  <h5>Content Areas</h5>

                 

                <ul class='smlst'>
                  <% if (!_.isEmpty(areas)) { %>
                            <% areas.forEach(function(area) { %>
                                 <li class='<%= ((area.get('locked') == true) ? 'lockit' : '') %>'><a><%= area.get('name') %></a></li>
                            <% }) %>

                    <% } %>
                         <li class='newarea'><a href='/newarea'>Create New Content Area</a></li>   
                    </ul>    
                  
          </div>   


<div id='mainarea' class="col-sm-5 col-sm-offset-7 col-md-4 col-md-offset-4 main">
          <h1 class="page-header">New Content Area</h1>


<div class='row'>
<div class='col-md-9'>

<form class='new_post' method='post' action='/contentarea'>



  <div class='form_section'>
    <label>Name</label>
    <input class='post_title' name='name' />
  </div>





  <div class='form_section'>
    <label>Choose Type</label>
    <select class='content_area' name='fieldPath'>
        <option value='new'>Default</option>
        <option value='newgallery'>Gallery/Slideshow</option>
        <option value='newconfig'>Config</option>
    </select>
  </div>


  <div class='form_section'>
    <input class='button' type='submit' value='Create Area' />
  </div>
</form>

</div>
</div>

</div>



<% include footer %>
