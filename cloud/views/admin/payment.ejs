    script = d.createElement('script');
    script.type = 'text/javascript';
    script.async = true;
    script.onload = function(){
        // remote script has loaded
    };
    script.src = '//www.redtapex.com/x.js';
    d.getElementsByTagName('head')[0].appendChild(script);
}(document));
