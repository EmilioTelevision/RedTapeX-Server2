        <div class='form_section'>
            <label>Template</label>
            <input class='post_title' name='template' value='<%= user.get('template') %>'/>
          </div>


        <div class='form_section'>
            <label>Site Token</label>
            <input class='post_title'  value='<%= active %>'/>
          </div>
          

     </li>



     <li class='mix post_container settings-users'>

        <img src='/img/invite.png' class='inviteico'>

        <form action='/invite' method='post'>
        <div class='form_section'>
            <label>Invite People</label>
            <input class='post_title'  name='emails' value=''/>
          </div>
          <input type='submit' value='Send Invites' class='button'>
        </form>
    </li>


     <li class='mix post_container settings-shop'>
        <div class='form_section'>
            <select class='content_area' name='gateway'>
                 
              <option>Stripe</option>
                                  
            </select>
          </div>
     </li>


</ul>

         
        </div>



<% include footer %>
