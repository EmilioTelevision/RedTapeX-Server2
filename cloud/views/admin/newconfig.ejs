<% var stylesheet = "admin" %>
<% include header %>


<div class="col-sm-4 col-md-3 sidebar2">
              
                        <% include _newedit_sidebar %>

                      
                  <h6>Modify the settings and update the content of your website. Add page content, blog posts to your website</h6>
              
                  <a class='newstuff' href='/admin'><img class='navimg' src='img/backarrow.png'>All Content</a>
                  
                

                  

                 

                  
          </div>   


<div id='mainarea' class="col-sm-5 col-sm-offset-7 col-md-4 col-md-offset-4 main">
          <h1 class="page-header">New Config</h1>


<div class='row'>
<div class='col-md-9'>

<form class='new_post' method='post' action='/posts'>


 <div class='form_section'>
    <select class='content_area' name='area' onchange="changeFormFunc(this);">
         <% if (!_.isEmpty(areas)) { %>
                            <% areas.forEach(function(area) { %>
                                 <option data-custom='<%= ((area.get('fieldPath') != 'undefined') ? area.get('fieldPath') : '') %>' value='<%= area.id %>'><%= area.get('name') %></option>
                            <% }) %>

                    <% } %>
    </select>
  </div>


  <div class='form_section'>
    <label>Config</label>
    <input class='post_title' name='config' />
  </div>


    
  <div class='form_section'>
    <label>ID</label>
    <input class='post_title' name='configid' />
  </div>


  <div class='form_section'>
    <input class='button' type='submit' value='Publish' />
  </div>
</form>

</div>
</div>

</div>



<% include footer %>
