<% include header %>


<div id='mainarea' class="col-sm-5 col-sm-offset-7 col-md-4 col-md-offset-4 main">
          <h1 class="page-header">New Blog Content</h1>

<form class='new_post' method='post' action='/posts'>
  <div class='form_section'>
    <label>Title</label>
    <input class='post_title' name='title' />
  </div>
  <div class='form_section'>
    <label>Body</label>
    <textarea class='post_body post_body_form' name='body'></textarea>
  </div>
  <div class='form_section'>
    <input class='button' type='submit' value='Publish' />
  </div>
</form>

</div>


